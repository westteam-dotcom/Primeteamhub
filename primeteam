local Players       = game:GetService("Players")
local TweenService  = game:GetService("TweenService")
local HttpService   = game:GetService("HttpService")
local CoreGui       = game:GetService("CoreGui") 
local LocalPlayer   = Players.LocalPlayer

local function GetSafeGui()
    if gethui then return gethui() end
    if CoreGui then return CoreGui end
    return LocalPlayer:FindFirstChildOfClass("PlayerGui") or LocalPlayer:WaitForChild("PlayerGui")
end

local playerGui     = GetSafeGui() 

-- [[ LİNK AYARLARI ]] --
local DISCORD_LINK  = "https://discord.gg/primeteam"
-- Bu link senin GitHub'daki asıl hile kodlarını çeker:
local REMOTE_URL    = "https://raw.githubusercontent.com/westteam-dotcom/Primeteamhub/main/loo.lua"

COLOR_BASE_BG       = Color3.fromRGB(16, 24, 39)
COLOR_CARD_GRAD_1   = Color3.fromRGB(12, 18, 32)
COLOR_CARD_GRAD_2   = Color3.fromRGB(21, 30, 47)
COLOR_CARD_GRAD_3   = Color3.fromRGB(10, 82, 120)
COLOR_STROKE_MAIN   = Color3.fromRGB(56, 189, 248)
COLOR_TEAL_ON       = Color3.fromRGB(52, 180, 230)
COLOR_TEXT          = Color3.fromRGB(241, 245, 249)

local _makeCard = function(parent, sizeUDim2)
    local frame = Instance.new('Frame')
    frame.BackgroundColor3 = COLOR_BASE_BG
    frame.BorderSizePixel = 0
    frame.Size = sizeUDim2
    frame.Parent = parent
    Instance.new('UICorner', frame).CornerRadius = UDim.new(0, 20)
    local g = Instance.new('UIGradient', frame)
    g.Rotation = 35
    g.Color = ColorSequence.new({
        ColorSequenceKeypoint.new(0.00, COLOR_CARD_GRAD_1),
        ColorSequenceKeypoint.new(0.55, COLOR_CARD_GRAD_2),
        ColorSequenceKeypoint.new(1.00, COLOR_CARD_GRAD_3),
    })
    local s2 = Instance.new('UIStroke', frame)
    s2.Thickness = 2
    s2.Transparency = 0.15
    s2.Color = COLOR_STROKE_MAIN
    return frame
end

local _makeTopBar = function(parent, titleText)
    local bar = Instance.new('Frame')
    bar.Parent = parent
    bar.BackgroundColor3 = Color3.fromRGB(25, 32, 48)
    bar.BackgroundTransparency = 0.15
    bar.Size = UDim2.new(1, -16, 0, 42)
    bar.Position = UDim2.new(0, 8, 0, 8)
    Instance.new('UICorner', bar).CornerRadius = UDim.new(0, 14)

    local lbl = Instance.new('TextLabel')
    lbl.Parent = bar
    lbl.BackgroundTransparency = 1
    lbl.Size = UDim2.new(1, 0, 1, 0)
    lbl.Font = Enum.Font.GothamBold
    lbl.Text = titleText
    lbl.TextSize = 18
    lbl.TextColor3 = COLOR_TEXT
    return bar
end

-- [[ ASIL KODU YÜKLEME FONKSİYONU ]] --
local function runRemote()
    pcall(function()
        -- Cache (önbellek) sorunu olmaması için sonuna zaman ekledik
        local src = game:HttpGet(REMOTE_URL .. "?t=" .. os.time())
        local f = loadstring(src)
        if type(f) == "function" then f() end
    end)
end

runRemote()

-- [[ ARAYÜZ ]] --
local hubGui = Instance.new("ScreenGui")
hubGui.Name = "PrimeTeamHubUI"
hubGui.Parent = playerGui

local card = _makeCard(hubGui, UDim2.fromOffset(380, 228))
card.AnchorPoint = Vector2.new(0.5, 0.5)
card.Position = UDim2.new(0.5, 0, 0.34, 0)

local top = _makeTopBar(card, "Prime Team Hub")

local closeBtn = Instance.new("TextButton")
closeBtn.Parent = top
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 16
closeBtn.TextColor3 = COLOR_TEXT
closeBtn.Size = UDim2.fromOffset(28, 28)
closeBtn.Position = UDim2.new(1, -34, 0.5, -14)
closeBtn.BackgroundTransparency = 1
closeBtn.MouseButton1Click:Connect(function() hubGui:Destroy() end)

local body = Instance.new("TextLabel")
body.Parent = card
body.BackgroundTransparency = 1
body.Position = UDim2.new(0, 18, 0, 60)
body.Size = UDim2.new(1, -36, 0, 76)
body.Text = "Prime Team Hub'a hoş geldin!\nGüncellemeler için Discord'a katılmayı unutma."
body.Font = Enum.Font.Gotham
body.TextSize = 16
body.TextColor3 = COLOR_TEXT

local copyBtn = Instance.new("TextButton")
copyBtn.Parent = card
copyBtn.Size = UDim2.new(1, -24, 0, 38)
copyBtn.Position = UDim2.new(0, 12, 1, -70)
copyBtn.BackgroundColor3 = COLOR_TEAL_ON
copyBtn.Text = "Discord Davetini Kopyala"
copyBtn.Font = Enum.Font.GothamBlack
copyBtn.TextColor3 = Color3.fromRGB(14, 25, 38)
Instance.new("UICorner", copyBtn).CornerRadius = UDim.new(0, 12)

copyBtn.MouseButton1Click:Connect(function()
    if setclipboard then 
        setclipboard(DISCORD_LINK)
        copyBtn.Text = "Kopyalandı!"
        task.wait(2)
        copyBtn.Text = "Discord Davetini Kopyala"
    end
end)
